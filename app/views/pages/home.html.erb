<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1 class="mt-5">CryptoTrends Social Aggregator</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-center">
      <table class="table table-hover table-responsive">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Symbol</th>
            <th>Price</th>
            <th>Market Cap</th>
            <th>Volume (24h)</th>
            <th>Circulating Supply</th>
            <th>Change (24h)</th>
            <th>Change (1h)</th>
          </tr>
        </thead>
        <tbody>
          <% @cryptos.each_with_index do |crypto, i| %>
            <tr>
              <th scope="row"><%= i + 1 %>                     </th>
              <td> <%= add_commas(crypto.name) %>              </td>
              <td> <%= add_commas(crypto.symbol) %>            </td>
              <td>$<%= add_commas(crypto.price) %>             </td>
              <td>$<%= add_commas(crypto.market_cap) %>        </td>
              <td>$<%= add_commas(crypto.volume_24h) %>        </td>
              <td>$<%= add_commas(crypto.circulating_supply) %></td>
              <td> <%= add_commas(crypto.change_24h) %>%       </td>
              <td> <%= add_commas(crypto.change_1h) %>%        </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
